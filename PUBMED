        "\n",
        "# STEP 1: Install necessary libraries\n",
        "!pip install biopython langchain google-generativeai langchain-google-genai\n",
        "\n",
        "# STEP 2: Imports\n",
        "from Bio import Entrez\n",
        "import os\n",
        "from langchain.prompts import PromptTemplate\n",
        "from langchain_google_genai import ChatGoogleGenerativeAI\n",
        "\n",
        "# STEP 3: Set API keys\n",
        "os.environ[\"GOOGLE_API_KEY\"] = \"AIzaSyA7I7bnBtcrwjGfMUXkHuHpKPcr99U906A\"  # <-- Replace with your Gemini API key\n",
        "Entrez.email = \"laranyasethukumar@gmail.com\"               # <-- Required by NCBI PubMed API\n",
        "\n",
        "# STEP 4: Setup Gemini LLM\n",
        "llm = ChatGoogleGenerativeAI(\n",
        "    model=\"models/gemini-1.5-pro-latest\",\n",
        "    temperature=0.5,\n",
        "    google_api_key=os.environ[\"GOOGLE_API_KEY\"]\n",
        ")\n",
        "\n",
        "# STEP 5: Function to search PubMed and return abstracts\n",
        "def search_pubmed_abstracts(query, max_results=3):\n",
        "    handle = Entrez.esearch(db=\"pubmed\", term=query, retmax=max_results)\n",
        "    record = Entrez.read(handle)\n",
        "    ids = record[\"IdList\"]\n",
        "\n",
        "    abstracts = \"\"\n",
        "    if not ids:\n",
        "        return \"No PubMed results found for this query.\"\n",
        "\n",
        "    handle = Entrez.efetch(db=\"pubmed\", id=\",\".join(ids), rettype=\"abstract\", retmode=\"text\")\n",
        "    abstracts = handle.read()\n",
        "    return abstracts\n",
        "\n",
        "# STEP 6: Define prompt\n",
        "template = \"\"\"\n",
        "You are a knowledgeable healthcare assistant. Using the scientific abstracts provided from PubMed, answer the user's question clearly, responsibly, and based on real evidence.\n",
        "\n",
        "PubMed Abstracts:\n",
        "{context}\n",
        "\n",
        "User Question:\n",
        "{question}\n",
        "\"\"\"\n",
        "\n",
        "prompt = PromptTemplate.from_template(template)\n",
        "\n",
        "# STEP 7: Chat loop\n",
        "print(\"PubMed Healthcare Chatbot Ready! Type 'exit' to stop.\")\n",
        "while True:\n",
        "    user_input = input(\"You: \")\n",
        "    if user_input.lower() == \"exit\":\n",
        "        print(\"Chat ended.\")\n",
        "        break\n",
        "\n",
        "    pubmed_text = search_pubmed_abstracts(user_input)\n",
        "    chain = prompt | llm\n",
        "    response = chain.invoke({\"context\": pubmed_text, \"question\": user_input})\n",
        "    print(\"Bot:\", response.content)"
      ]
